<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.cs2340.team49x.spacetrader">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/spacetrader"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/spacetrader_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MarketActivity"
            android:label="@string/action_market"
            android:theme="@style/AppTheme.NoActionBar.FullScreen"/>
        <activity
            android:name=".Activities.TravelActivity"
            android:label="@string/action_game"
            android:theme="@style/AppTheme.NoActionBar.FullScreen"/>
        <activity
            android:name=".Activities.ConfigurationActivity"
            android:label="@string/action_settings"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>