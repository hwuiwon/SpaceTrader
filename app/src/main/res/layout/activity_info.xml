<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.InfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/infoNTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:paddingTop="10dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"/>
        
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/userimage"
            android:layout_marginTop="@dimen/margin8"
            android:layout_marginStart="@dimen/margin4"/>

        <TextView
            android:id="@+id/infoNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="25sp"
            android:paddingTop="@dimen/margin9"
            android:layout_marginStart="@dimen/margin10"/>
        
        <TextView
            android:id="@+id/invenValueTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/urCredit"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat_regular"
            android:layout_below="@id/infoNameTV"
            android:layout_marginStart="@dimen/margin10"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/totalInvenTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sCredit"
            android:layout_toEndOf="@id/invenValueTV"
            android:layout_below="@id/infoNameTV"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/invenInfoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cargo"
            android:textColor="@color/neonRed"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="20sp"
            android:layout_below="@id/invenValueTV"
            android:paddingTop="@dimen/margin4"
            android:layout_marginTop="@dimen/margin4"
            android:layout_marginStart="@dimen/margin4"
            android:layout_marginEnd="@dimen/margin4"
            android:layout_marginBottom="@dimen/margin3"/>

        <ListView
            android:id="@+id/invenInfoLV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/invenInfoTV"
            android:layout_marginStart="@dimen/margin4"
            android:layout_marginEnd="@dimen/margin4"
            android:layout_marginBottom="@dimen/margin4"/>
    </RelativeLayout>

</layout>