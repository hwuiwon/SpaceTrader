<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.MarketActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/black">

        <ListView
            android:id="@+id/itemLV"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:divider="@android:color/white"
            android:dividerHeight="1dp">
        </ListView>

        <TextView
            android:id="@+id/marketTV"
            android:paddingStart="@dimen/margin3"
            android:paddingTop="@dimen/margin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Sale: "
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_below="@+id/itemLV"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_light"/>

        <TextView
            android:id="@+id/marketItemCountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1400"
            android:paddingTop="@dimen/margin2"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_toEndOf="@id/marketTV"
            android:layout_below="@id/itemLV"
            android:fontFamily="@font/montserrat_light"/>

        <TextView
            android:id="@+id/marketTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your credits: "
            android:paddingStart="@dimen/margin3"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_below="@+id/marketTV"
            android:fontFamily="@font/montserrat_light"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15000"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_toEndOf="@id/marketTV2"
            android:layout_below="@id/marketTV"
            android:fontFamily="@font/montserrat_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:paddingHorizontal="@dimen/margin3"
            android:paddingBottom="@dimen/margin7"
            android:weightSum="2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Switch to Buy"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Done"
                android:layout_weight="1"/>

        </LinearLayout>

    </RelativeLayout>

</layout>