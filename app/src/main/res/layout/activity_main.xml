<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:background="@color/space">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/moving"
        android:background="@color/space"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/mainTopMargin">
    </LinearLayout>

    <Button
        android:id="@+id/settingsBT"
        android:onClick="openSettings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/roundrectangle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin3"
        android:layout_marginTop="@dimen/margin3"/>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_person_add_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin4"
        android:layout_marginTop="@dimen/margin4">
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_light"
        android:gravity="center"
        android:paddingTop="@dimen/mainTopMargin"
        android:text="@string/name_main"
        android:textColor="@android:color/white"
        android:textSize="45sp" />

    <Button
        android:onClick="startGame"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="@string/play"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat_semibold"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/mainTopMargin"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>