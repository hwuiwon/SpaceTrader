<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.SelectActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/moving"
            android:background="@color/space"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rLayselect"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/mainTopMargin">

            <TextView
                android:id="@+id/youAreOnTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/margin4"
                android:text="@string/currOn"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat_regular"/>

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/margin4"
                android:layout_toEndOf="@+id/youAreOnTV"
                android:text="@string/tmpSys"
                android:textAlignment="viewStart"
                android:textColor="@color/neonBlue"
                android:fontFamily="@font/montserrat_semibold"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/techlevelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rLayselect"
            android:layout_marginEnd="@dimen/margin4"
            android:text="@string/tmpTLv"
            android:textAlignment="viewStart"
            android:textColor="@color/neonGreen"
            android:fontFamily="@font/montserrat_regular"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/resourcesTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/techlevelTV"
            android:text="@string/tmpRsr"
            android:textAlignment="viewStart"
            android:textColor="@color/neonRed"
            android:fontFamily="@font/montserrat_regular"
            android:layout_centerInParent="true"/>

        <Button
            android:onClick="openPlayerInfo"
            android:id="@+id/selectBT1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin7"
            android:background="@drawable/roundrectangle"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/pInfo"
            android:textSize="20sp"
            android:layout_above="@id/selectBT2"
            android:textColor="@android:color/white"
            android:layout_marginStart="@dimen/margin4"
            android:layout_marginEnd="@dimen/margin4"/>

        <Button
            android:id="@+id/selectBT2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin7"
            android:background="@drawable/roundrectangle"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/buyShip"
            android:textSize="20sp"
            android:layout_above="@id/selectBT3"
            android:textColor="@android:color/white"
            android:layout_marginStart="@dimen/margin4"
            android:layout_marginEnd="@dimen/margin4"/>

        <Button
            android:id="@+id/selectBT3"
            android:onClick="startTravel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin7"
            android:layout_alignParentBottom="true"
            android:background="@drawable/roundrectangle"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/startTr"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/mainTopMargin"
            android:layout_marginStart="@dimen/margin4"
            android:layout_marginEnd="@dimen/margin4"/>

    </RelativeLayout>

</layout>